<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="cn.bugstack.infrastructure.dao.IStrategyAwardDao">

    <resultMap id="DataMap" type="cn.bugstack.infrastructure.dao.po.StrategyAward">
        <id column="id" property="id"/>
        <id column="strategy_id" property="strategyId"/>
        <id column="award_id" property="awardId"/>
        <id column="award_title" property="awardTitle"/>
        <id column="award_subtitle" property="awardSubtitle"/>
        <id column="award_count" property="awardCount"/>
        <id column="award_count_surplus" property="awardCountSurplus"/>
        <id column="award_rate" property="awardRate"/>
        <id column="rule_models" property="ruleModels"/>
        <id column="sort" property="sort"/>
        <result column="create_time" property="createTime"/>
        <result column="update_time" property="updateTime"/>
    </resultMap>

    <select id="queryStrategyAwardList" resultMap="DataMap">
        select award_title, award_subtitle, award_count, award_count_surplus, award_rate, rule_models, sort
        from strategy_award
    </select>


    <select id="queryStrategyAwardListByStrategyId" parameterType="java.lang.Long" resultMap="DataMap">
        select strategy_id,
               award_id,
               award_count,
               award_count_surplus,
               award_rate,
               award_title,
               award_subtitle,
               sort,
               rule_models
        from strategy_award
        where strategy_id = #{strategyId}
    </select>

    <select id="queryStrategyAwardRuleModels" parameterType="cn.bugstack.infrastructure.dao.po.StrategyAward"
            resultMap="DataMap">
        select rule_models
        from strategy_award
        where strategy_id = #{strategyId}
          and award_id = #{awardId}
    </select>

    <!--    void updateStrategyAwardStock(StrategyAward strategyAwardReq);-->
    <update id="updateStrategyAwardStock" parameterType="cn.bugstack.infrastructure.dao.po.StrategyAward">
        update strategy_award
        set award_count_surplus = award_count_surplus - 1
        where strategy_id = #{strategyId}
          and award_id = #{awardId}
          and award_count_surplus > 0
    </update>

    <!--    StrategyAward queryStrategyAwardEntity(StrategyAward strategyAwardReq);-->
    <select id="queryStrategyAwardEntity" parameterType="cn.bugstack.infrastructure.dao.po.StrategyAward"
            resultMap="DataMap">
        select strategy_id,
               award_id,
               award_count,
               award_count_surplus,
               award_rate,
               award_title,
               award_subtitle,
               sort
        from strategy_award
        where strategy_id = #{strategyId}
          and award_id = #{awardId}
    </select>

    <select id="queryStrategyAwardListByAwardIds" parameterType="java.util.List" resultMap="DataMap">
        select award_id,
               award_title
        from strategy_award
        where award_id in
        <foreach item="item" collection="list" index="index" separator="," close=")" open="(">
            #{item}
        </foreach>
    </select>
</mapper>
